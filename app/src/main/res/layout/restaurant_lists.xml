<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="@color/colorAccent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/res_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/starbucks"/>

    <TextView
        android:id="@+id/res_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Starbucks"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/res_image"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/res_address"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/res_name"
        android:layout_toRightOf="@+id/res_image"
        android:text="115 Habitant Drive"
        android:textSize="15dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/res_rating"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/res_name"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="65dp"
        android:text="9.0"
        android:textStyle="bold"
        android:textSize="25dp"/>

</RelativeLayout>