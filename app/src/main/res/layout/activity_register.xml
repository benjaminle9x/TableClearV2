<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/tableclearbackground">

    <TextView
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TABLE"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textColor="#db4a26"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="55dp"/>

    <TextView
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:textStyle="bold"
        android:textSize="43dp"
        android:textColor="#F1F1F1"
        android:layout_toRightOf="@id/table"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/inUsername"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_below="@id/clear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:hint="Username"
        android:background="@drawable/radius"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/inPassword"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@id/inUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="Password"
        android:textStyle="bold"
        android:background="@drawable/radius"
        android:textSize="20dp"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/inRetype"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@id/inPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:hint="Re-type Your Password"
        android:textStyle="bold"
        android:background="@drawable/radius"
        android:textSize="20dp"
        android:padding="10dp"/>

    <Button
        android:id="@+id/btRegister"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_below="@id/inRetype"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/radius2"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:visibility="invisible" />

</RelativeLayout>