<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservationActivity"
    android:background="@drawable/tableclearbackground">

    <TextView
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TABLE"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textColor="#db4a26"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:textStyle="bold"
        android:textSize="43dp"
        android:textColor="#F1F1F1"
        android:layout_toRightOf="@id/table"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/quote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seat more and Spend less with Table Clear"
        android:textColor="@android:color/white"
        android:layout_below="@id/clear"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/mResName"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:ems="10"
        android:layout_below="@id/clear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/radius"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/mResAddress"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:ems="10"
        android:layout_below="@id/mResName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/radius"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/mCusName"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:ems="10"
        android:layout_below="@id/mResAddress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/radius"
        android:hint="Booking Name"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/mCusPhone"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:ems="10"
        android:layout_below="@id/mCusName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/radius"
        android:hint="Mobile Phone"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <Button
        android:id="@+id/timepick"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/radius2"
        android:layout_below="@id/mCusPhone"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:text="Pick a Time"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/datepick"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/radius2"
        android:layout_toRightOf="@id/timepick"
        android:layout_below="@id/mCusPhone"
        android:text="Pick a Date"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:id="@+id/tablepick"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:background="@drawable/radius2"
        android:layout_toRightOf="@id/datepick"
        android:layout_below="@id/mCusPhone"
        android:text="Pick a Table"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/mTime"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/timepick"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/mDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timepick"
        android:layout_toRightOf="@+id/mTime"
        android:layout_marginLeft="73dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:visibility="invisible"/>

    <NumberPicker
        android:background="@android:color/white"
        android:id="@+id/numberPicker"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@id/tablepick"
        android:layout_marginLeft="315dp"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/mTable"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/numberPicker"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/radius2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:text="Book A Table"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/lon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="invisible"
        android:layout_marginTop="50dp"/>


</RelativeLayout>